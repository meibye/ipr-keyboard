# Normalize all text files to LF
* text=auto

# Explicitly set shell scripts and Python files to LF
*.sh text eol=lf
*.py text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.conf text eol=lf
*.service text eol=lf
*.ps1 text eol=lf

# Windows-specific files (if any)
*.bat text eol=crlf
*.cmd text eol=crlf
