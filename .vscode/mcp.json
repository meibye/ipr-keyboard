{
  "servers": {
    "ipr-rpi-dev-ssh": {
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "D:\\\\mcp\\\\ssh-mcp\\\\run_ssh_mcp.ps1",
        "-Profile", "dev",
        "-Blacklist", "^rm .*,^shutdown.*,^reboot.*",
        "-Whitelist", "^ls( .*)?,^cat .*,^df.*"
      ]
    },
    "ipr-rpi-prod-ssh": {
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "D:\\\\mcp\\\\ssh-mcp\\\\run_ssh_mcp.ps1",
        "-Profile", "prod",
        "-Blacklist", "^rm .*,^shutdown.*,^reboot.*",
        "-Whitelist", "^ls( .*)?,^cat .*,^df.*"
      ]
    }
  }
}
